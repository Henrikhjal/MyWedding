@model MyWedding.Models.User
@using MyWedding.Resources

<header>@ViewBag.Title</header>

<div class="container" style="margin-top:80px">
    <header>
        <h3 class="page-title text">@Wedding.login</h3>
    </header>
    <br />

    <div class="row">
        <div class="col-md-8">
            <section id="loginForm">
                @using (Html.BeginForm("Login", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        @Html.LabelFor(x => x.UserId, new { @class = "control-label col-md-2" })

                        <div class="col-md-10">

                            @Html.TextBoxFor(m => m.UserId, new { @class = "form-control", @placeholder = @Wedding.login_userid })
                            @Html.ValidationMessageFor(m => m.UserId, String.Empty, new { @style = "color:red;" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "control-label col-md-2" })

                        <div class="col-md-9">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = @Wedding.login_password })
                            @Html.ValidationMessageFor(m => m.Password, String.Empty, new { @style = "color:red;" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <p style="color:red">@ViewData["msg"]</p>
                        </div>
                    </div>

                    <input type="hidden" name="latitude" id="latitude" />
                    <input type="hidden" name="longitude" id="longitude" />
                    <input type="hidden" name="city" id="city" />
                    <input type="hidden" name="country" id="country" />

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Logga in" class="btn btn-primary" />
                        </div>
                    </div>
                }
            </section>
        </div>
    </div>
</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
<script src="~/Scripts/App/position.js"></script>