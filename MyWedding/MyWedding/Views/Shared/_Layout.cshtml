@using MyWedding.Resources;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bröllop</title>
    @Styles.Render("~/Content/css")
    <link rel="stylesheet" href="~/Content/sticky-footer-navbar.css">
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>

    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">

            <div class="row">
                <div class="col-md-12">
                    <div class="container-fluid">
                        <div class="navbar-header">
                            <button type="button" data-target="#navbarCollapse" data-toggle="collapse" class="navbar-toggle">
                                <span class="sr-only">Toggle navigation</span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                                <span class="icon-bar"></span>
                            </button>
                            @Html.ActionLink(@Wedding.layout_wedding, "Index", "Home", null, new { @class = "navbar-brand hidden-sm" })
                            @Html.ActionLink(@Wedding.layout_wedding_short, "Index", "Home", null, new { @class = "navbar-brand visible-sm" })
                        </div>

                        <div class="collapse navbar-collapse" id="navbarCollapse">
                            @*<h1>(@ViewContext.RouteData.Values["Action"].ToString()</h1>*@
                            <ul class="nav navbar-nav">
                                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Program" ? "active" : "")">@Html.ActionLink(@Wedding.layout_menu1, "Program", "Home")</li>
                                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Wishlist" ? "active" : "")">@Html.ActionLink(@Wedding.layout_menu2, "Wishlist", "Wishlist")</li>
                                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Info" ? "active" : "")">@Html.ActionLink(@Wedding.layout_menu3, "Info", "Home")</li>
                                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Contacts" ? "active" : "")">@Html.ActionLink(@Wedding.layout_menu4, "Contacts", "Home")</li>
                                <li class="@(ViewContext.RouteData.Values["Action"].ToString() == "Guestbook" ? "active" : "")">@Html.ActionLink(@Wedding.layout_menu5, "Index", "Guestbook")</li>

                            </ul>

                            <span class="navbar-text"></span>.
                            @*&nbsp &nbsp &nbsp*@
                            <a href="@Url.Action("ChangeLanguageSwe", "Home")" class="navbar-brand">
                                <img src="~/Content/Images/Main/flag swe.png" width="24" height="24" alt="Swedish Flag">
                            </a>

                            <a href="@Url.Action("ChangeLanguageUk", "Home")" class="navbar-brand">
                                <img src="~/Content/Images/Main/flag uk.png" width="24" height="24" alt="UK Flag">
                            </a>

                            <form class="navbar-form navbar-left hidden" role="search">
                                <div class="form-group hidden">
                                    <input type="text" class="hidden form-control" placeholder=@Wedding.layout_searchstring>
                                </div>
                                <button type="submit" class="hidden btn btn-default">@Wedding.layout_search</button>
                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>

    <footer class="footer">
        <div class="container">
            <p class="text-muted">@Wedding.layout_ask</p>
        </div>
    </footer>


    @*@Scripts.Render("~/bundles/jquery")*@
    @Scripts.Render("~/bundles/bootstrap")
    @*<script src="~/Scripts/bootstrap.min.js"></script>*@

    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)

    <script>
        $(document).ready(function () {
            $('.dropdown-toggle').dropdown()
        });
    </script>

</body>
</html>